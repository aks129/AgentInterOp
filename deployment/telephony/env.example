# Telephony Stack Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Asterisk ARI Configuration
# =============================================================================
ARI_USER=ariuser
ARI_PASS=your-secure-password-here

# =============================================================================
# Voice Agent Server
# =============================================================================
# URL where the AgentInterOp voice agent WebSocket is accessible
# For local development: ws://host.docker.internal:8000/api/telephony/voice
# For production: wss://your-domain.com/api/telephony/voice
VOICE_AGENT_WSS_URL=ws://host.docker.internal:8000/api/telephony/voice

# =============================================================================
# AWS Chime Configuration (set in AgentInterOp .env)
# =============================================================================
# AWS_CHIME_PHONE_NUMBER=+15551234567
# AWS_REGION=us-east-1

# =============================================================================
# TLS/SSL Configuration
# =============================================================================
# Domain for TLS certificate (must have DNS A record pointing to this server)
DOMAIN=voice.yourdomain.com
LETSENCRYPT_EMAIL=admin@yourdomain.com

# =============================================================================
# AgentInterOp Configuration (add to your main .env)
# =============================================================================
# TELEPHONY_ENABLED=true
# SHIM_SERVER_URL=http://localhost:8080
# CALLER_ID=+15551234567
# OPENAI_API_KEY=sk-your-key
